{
    // Give your container a friendly name in VS Code
    "name": "TensorFlow GPU Dev Container",
  
    // Use the prebuilt NVIDIA TensorFlow container image
    "image": "nvcr.io/nvidia/tensorflow:23.12-tf2-py3",
  
    // Pass the GPU to the container
    "runArgs": [
      "--gpus",
      "all"
    ],
  
    // (Optional) Example: set environment variables for TensorFlow
    "containerEnv": {
      "TF_CPP_MIN_LOG_LEVEL": "3"  // Hide TF debug logs
    },
  
    // (Optional) Run as root for simplicity
    "remoteUser": "root"
  }
  